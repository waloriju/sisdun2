<% provide(:title, 'New Customer') %>

<h1>New Customer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
      <%= render 'shared/customer_error_messages' %>
    <fieldset>
      <legend>Personal Data</legend>
      <div class="row">
        <div class="span3">
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="span3">
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
      </div>

      <div class="row">
        <div class="span1"><%= f.label :gender %></div>
        <div class="span1">
          <%= f.radio_button :gender, 'male' %>
          <%= f.label :Male %>
        </div>
          <%= f.radio_button :gender, 'female' %>
          <%= f.label :Female %>
      </div>

      <div class="row">
        <div class="span3">
          <%= f.label :cpf, "CPF" %>
          <%= f.text_field :cpf, id: 'cpf' %>
        </div>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.label :birth_date, "Date of birth" %>
          <%= f.date_select :birth_date,
            {:order => [:day, :month, :year], :use_short_month => true, :start_year => Date.today.year - 90, :end_year => Date.today.year, :prompt => { :day => 'day', :month => 'month', :year => 'year' }},
            {:class => "input-mini"}
          %>
        </div>
      </div>
    </fieldset>
    
      <%= f.submit "Create new customer", class: "btn btn-large btn-primary" %>
    <% end %>
  
  </div>
</div>