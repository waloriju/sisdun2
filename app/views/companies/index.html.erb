<% provide(:title, 'Empresas') %>

<div class="page-header">
  <h1>Empresas</h1>
</div>

<div class="control-groups">
  <%= search_form_for @search do |f| %>
    <div class="input-append">
      <%= f.label :company_name_cont, "Razão Social", class: "input-medium search-query" %>
      <%= f.text_field :company_name_cont %>
      <button class="btn"><% f.submit %>Pesquisar</button>
    </div>
  <% end %>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Razão Social</th>
      <th>Nome Fantasia</th>
      <th>CNPJ</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to(company.id, company) %></td>
        <td><%= company.company_name %></td>
        <td><%= company.trading_name %></td>
        <td><%= company.cnpj %></td>
        <td>
            <%= link_to "Mostrar", company, class: 'btn btn-mini' %>
            <%= link_to "Editar", edit_company_path(company), class: 'btn btn-mini' %>
            <%= link_to "Deletar", company, method: :delete, data: { confirm: "Você tem certeza?"}, class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo", new_company_path, class: 'btn btn-primary' %>
