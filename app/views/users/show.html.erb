<% provide(:title, @user.name) %>

<div class="page-header">
  <h1>Usuário: <small><%= @user.name %></small></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong>E-mail:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Voltar', users_path, class: 'btn' %>
  <% if current_user.admin? && !current_user?(@user) %>
    <%= link_to 'Editar', edit_user_path(@user), class: 'btn' %>
    <%= link_to 'Deletar', @user, method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-danger" %>
  <% end %>
</div>