<% provide(:title, 'Produtos')%>
<div class="page-header">
  <h1>Produtos</h1>
</div>

<div class="control-groups">
  <%= search_form_for @search do |f| %>
    <div class="input-append">
      <%= f.label :title_cont, "Titulo", class: "input-medium search-query" %>
      <%= f.text_field :title_cont %>
      <button class="btn"><% f.submit %>Pesquisar</button>
    </div>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Titulo</th>
      <th>Categoria</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to(product.id, product) %></td>
        <td><%= product.title %></td>
        <th><%= product.category.name %></th>
        <td><%= product.description %></td>
        <td><%= sprintf("%0.2f", product.price) %></td>
        <td>
          <%= link_to 'Mostrar', product, class: 'btn btn-mini' %>
          <%= link_to 'Editar', edit_product_path(product), class: 'btn btn-mini' %>
          <%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo', new_product_path, class: 'btn btn-primary' %>